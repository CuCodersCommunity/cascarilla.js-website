---
import { Github, Heart, Sparkles, Wand2, Zap, Wand, Vibrate, Star } from "lucide-astro";
---

{/* Hero Section */}
<section class="relative overflow-hidden px-4 py-20 lg:py-32">
  {/* Animated background stars */}
  <div class="absolute inset-0 -z-10">
    {
      [...Array(30)].map((_, i) => (
        <div
          class="absolute h-0.5 w-0.5 animate-twinkle rounded-full bg-white/80 shadow-[0_0_2px_#fff]"
          style={{
            top: `${Math.random() * 100}%`,
            left: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 3}s`,
            animationDuration: `${2 + Math.random() * 3}s`,
